/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    // TypeORM の Entity クラスを共用する際に必要
    "types": ["node"],
    "paths": {
      "react-native-sqlite-storage": ["src/dummy.ts"]  // Error: Can't resolve 'react-native-sqlite-storage' エラー回避用
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/dummy.ts"  // Error: Can't resolve 'react-native-sqlite-storage' エラー回避用
  ]
}
